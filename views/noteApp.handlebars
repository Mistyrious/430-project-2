<html lang="en">
<head>
  <meta charset="utf-8"/>
  <title>Note Manager</title>
  <script crossorigin src="https://unpkg.com/react@17/umd/react.development.js"></script>
  <script crossorigin src="https://unpkg.com/react-dom@17/umd/react-dom.development.js"></script>
  <link rel="shortcut icon" href="/assets/img/favicon.png"/>
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css">
  <link rel="stylesheet" type="text/css" href="/assets/style.css"/>
</head>
<body>
  <nav class="navbar">
    <div class="navbar-brand">
      <a class="navbar-item" href="/login"><img id="logo" src="/assets/img/stickynote.png" alt="sticky note logo"/></a>
      <h1 class="navbar-item title is-3 is-italic">Notes Manager</h1>
    </div>
    <div class="navbar-end">
      <div class="navbar-item">
          <p class="button" id="changePassButton">Change Password</p>
          <a class="button" href="/logout">Log out</a>
        </div>
      </div> 
    </div>
  </nav>

  <div class="notification is-danger is-light has-text-centered is-hidden" id="errorArea">
    <h3 class="title is-4"><span id="errorMessage"></span></h3>
  </div>

  <div class="columns">
    <div class="advertisement column is-one-fifth"></div>
    <div class="column">
      <div class="box has-text-centered">
        <button class="button is-success" id="createListButton">Create New List</button>
      </div>

      <section id="changePass">

      </section>

      <section id="makeNote">

      </section>
      
      <section id="notes">
        
      </section>
    </div>
    <div class="advertisement column is-one-fifth"></div>
  </div>

  <script src="/assets/noteAppBundle.js"></script>
</body>
</html>
